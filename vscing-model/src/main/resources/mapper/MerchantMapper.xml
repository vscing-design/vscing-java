            <if test="uscc != null">uscc = #{uscc, jdbcType=VARCHAR},</if>
            <if test="legalName != null">legal_name = #{legalName, jdbcType=VARCHAR},</if>
            <if test="idCard != null">id_card = #{idCard, jdbcType=VARCHAR},</if>
