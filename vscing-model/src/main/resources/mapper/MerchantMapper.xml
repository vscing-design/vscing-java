        </trim>
    </insert>

    <!-- 更新记录 -->
    <update id="update" parameterType="com.vscing.model.entity.Merchant">
        UPDATE <include refid="tableName" />
        <set>
            <if test="id != null">id = #{id, jdbcType=BIGINT},</if>
